export ZSH="$HOME/.oh-my-zsh" # Oh My Zsh installation path
export LANG="en_US.UTF-8"     # Language

### PATHS ###
export PATH="$PATH:$HOME/.local/bin"        # Add user local bin (e.g., MkDocs)
export BUN_INSTALL="$HOME/.bun"             # Bun installation path
export PATH="$BUN_INSTALL/bin:$PATH"        # Add Bun to PATH
export NVM_DIR="$HOME/.nvm"
export PATH="/usr/bin/ansible-lint:$PATH"   # Add Ansible Lint to PATH

### APP CONFIGS ###
export EDITOR="code --wait"                 # Set VSCode as default editor
export BAT_PAGER="ov -F -H3"                # Use ov for Bat pager
export WIREGUARD_CONFIG='/etc/wireguard/wg0.conf'
